{
  "name": "infra-mcp-server",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "description": "An MCP service for infra ui components query | 一个生成业务组件代码的 MCP 服务，包含系统提示词、组件文档、API 文档、代码示例和更新日志查询",
  "scripts": {
    "build": "tsup --dts",
    "start": "node dist/cli.js",    
    "start:http": "node dist/cli.js",
    "start:cli": "cross-env NODE_ENV=cli node dist/cli.js",
    "dev": "cross-env NODE_ENV=development tsup --watch",
    "dev:cli": "cross-env NODE_ENV=development tsup --watch -- --stdio",
    "inspector": "pnpx @modelcontextprotocol/inspector",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "extract": "tsup src/cli.ts && node dist/cli.js --extract ../infra-ui"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@figma/rest-api-spec": "^0.24.0",
    "@koa/router": "^13.1.0",
    "@modelcontextprotocol/sdk": "^1.11.4",
    "@types/yargs": "^17.0.33",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "js-yaml": "^4.1.0",
    "koa": "^3.0.0",
    "koa-bodyparser": "^4.4.1",
    "koa-static": "^5.0.0",
    "remeda": "^2.20.1",
    "yargs": "^17.7.2",
    "zod": "^3.24.2",
    "to-vfile": "^8.0.0",
    "vfile-matter": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^16.1.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  }
}
